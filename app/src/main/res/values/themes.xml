<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Swey" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/appPrimaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="tabTextStyle" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/dm_sans_bold</item>
    </style>

    <style name="filterTabTextStyle" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/dm_sans_bold</item>
        <item name="android:textAlignment">textStart</item>
    </style>
</resources>