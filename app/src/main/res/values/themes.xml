<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Swey" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/appPrimaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="bottomSheetDialogTheme">@style/CustomRoundedBottomSheetDialog</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:navigationBarColor">@color/primary_background_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomRoundedBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">
            @style/Animation.MaterialComponents.BottomSheetDialog
        </item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:background">@color/primary_background_color</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/primary_text_color</item>
        <item name="android:textColorHint">#ABABAB</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="tabTextStyle" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/dm_sans_bold</item>
    </style>

    <style name="tabTextStyleChat" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/dm_sans_bold</item>
    </style>

    <style name="filterTabTextStyle" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/dm_sans_bold</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="FullScreenDialogStyleEnterFromRightAndExitToRight" parent="Theme.Swey">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowEnterAnimation">@anim/enter_from_right</item>
        <item name="android:windowExitAnimation">@anim/exit_to_right</item>
    </style>

    <style name="FullScreenDialogStyleFade" parent="Theme.Swey">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="Activity.NoTitle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ShapeAppearanceOverlay.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Rounded.Cut.Reply" parent="">
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerFamilyBottomLeft">cut</item>
    </style>

    <style name="Rounded.Cut.Send" parent="">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">15dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>

    <style name="Rounded.Cut.Receive" parent="">
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">15dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>
</resources>