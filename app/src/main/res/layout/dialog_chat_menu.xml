<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4D000000"
            android:elevation="1dp" />

        <ImageView
            android:id="@+id/ivBackground"
            android:scaleType="centerCrop"
            android:elevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnQuickPay"
            android:layout_width="@dimen/_46sdp"
            android:layout_height="@dimen/_46sdp"
            android:layout_marginBottom="@dimen/_18sdp"
            android:elevation="@dimen/_4sdp"
            app:cardCornerRadius="50dp"
            app:layout_constraintBottom_toTopOf="@id/btnNewChat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_background_circle"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_incoming_outgoing" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvQuickPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_text_background_rounded"
            android:fontFamily="@font/poppins_medium"
            android:paddingHorizontal="@dimen/_18sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_9sdp"
            android:text="Quick Pay"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="@+id/btnQuickPay"
            app:layout_constraintEnd_toStartOf="@+id/btnQuickPay"
            app:layout_constraintTop_toTopOf="@+id/btnQuickPay" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnNewChat"
            android:layout_width="@dimen/_46sdp"
            android:layout_height="@dimen/_46sdp"
            android:layout_marginBottom="@dimen/_18sdp"
            android:elevation="@dimen/_4sdp"
            app:cardCornerRadius="50dp"
            app:layout_constraintBottom_toTopOf="@id/btnNewGroup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_background_circle"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_chat_white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvNewChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_text_background_rounded"
            android:fontFamily="@font/poppins_medium"
            android:paddingHorizontal="@dimen/_18sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_9sdp"
            android:text="New Chat"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="@+id/btnNewChat"
            app:layout_constraintStart_toEndOf="@+id/btnNewChat"
            app:layout_constraintTop_toTopOf="@+id/btnNewChat" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnNewGroup"
            android:layout_width="@dimen/_46sdp"
            android:layout_height="@dimen/_46sdp"
            android:layout_marginBottom="@dimen/_18sdp"
            android:elevation="@dimen/_4sdp"
            app:cardCornerRadius="50dp"
            app:layout_constraintBottom_toTopOf="@id/btnCross"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_background_circle"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_users" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvNewGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_text_background_rounded"
            android:fontFamily="@font/poppins_medium"
            android:paddingHorizontal="@dimen/_18sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_9sdp"
            android:text="New Group"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="@+id/btnNewGroup"
            app:layout_constraintEnd_toStartOf="@+id/btnNewGroup"
            app:layout_constraintTop_toTopOf="@+id/btnNewGroup" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnCross"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:elevation="@dimen/_4sdp"
            app:cardCornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_background_circle"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_cross_white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>