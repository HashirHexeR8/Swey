            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textColor="#E50000"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:fontFamily="@font/dm_sans_bold"
