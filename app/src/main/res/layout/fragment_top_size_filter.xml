            android:textSize="14sp"
            android:fontFamily="@font/dm_sans_bold"
            android:background="@drawable/ic_filter_button_bg"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="20dp"
