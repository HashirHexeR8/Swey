<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="422dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/firstVerticalImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/s4p1"
            android:scaleType="fitXY"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/verticalProductImage"
            app:layout_constraintBottom_toTopOf="@id/secondVerticalImage"
            app:layout_constraintHeight_percent="0.35"
            app:layout_constraintWidth_percent="0.55"/>

        <ImageView
            android:id="@+id/secondVerticalImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/s4p2"
            android:scaleType="fitXY"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/verticalProductImage"
            app:layout_constraintHeight_percent="0.65"
            app:layout_constraintWidth_percent="0.55"/>

        <ImageView
            android:id="@+id/verticalProductImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/s4p3"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.45"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>