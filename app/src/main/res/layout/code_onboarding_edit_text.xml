<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_edittext_border"
    android:paddingHorizontal="24dp">

    <ImageView
        android:id="@+id/startDrawable"
        android:layout_width="@dimen/_13sdp"
        android:layout_height="@dimen/_13sdp"
        android:layout_marginVertical="24dp"
        android:src="@drawable/ic_code"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/separatorLine"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/_19sdp"
        android:layout_marginStart="@dimen/_19sdp"
        android:background="#DDDDDD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/startDrawable"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/layoutOtp"
        layout="@layout/otp_view"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_19sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/separatorLine"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
