<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ibBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24sdp"
            android:background="@null"
            android:padding="@dimen/_24sdp"
            android:src="@drawable/ic_back_arrow" />

        <ImageView
            android:layout_width="@dimen/_176sdp"
            android:layout_height="@dimen/_176sdp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_recovery_asset"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Recovery"
            android:textColor="@color/primary_text_color"
            android:textSize="34sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_18sdp"
            android:fontFamily="@font/poppins_medium"
            android:letterSpacing="0.09"
            android:lineSpacingExtra="@dimen/_6sdp"
            android:text="Please enter your email or\n username to reset your password"
            android:textAlignment="center"
            android:textColor="@color/secondary_text_color"
            android:textSize="14sp" />

        <include
            android:id="@+id/layoutUsername"
            layout="@layout/username_onboarding_edit_text"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_10sdp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:background="@drawable/ic_button_bg"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Send Code"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/custom_round_ripple"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</layout>