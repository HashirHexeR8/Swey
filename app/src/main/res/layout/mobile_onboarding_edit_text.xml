<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_edittext_border"
    android:paddingHorizontal="@dimen/_19sdp">

    <ImageView
        android:id="@+id/startDrawable"
        android:layout_width="@dimen/_13sdp"
        android:layout_height="@dimen/_13sdp"
        android:layout_marginVertical="@dimen/_19sdp"
        android:src="@drawable/ic_phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/separatorLine"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginVertical="24dp"
        android:layout_marginStart="24dp"
        android:background="#DDDDDD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/startDrawable"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPhonePrefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:fontFamily="@font/poppins_medium"
        android:text="+1"
        android:textColor="#C7C7C7"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintBottom_toBottomOf="@id/separatorLine"
        app:layout_constraintStart_toEndOf="@id/separatorLine"
        app:layout_constraintTop_toTopOf="@id/separatorLine" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_19sdp"
        android:fontFamily="@font/poppins_medium"
        android:text="Mobile Number"
        android:textColor="#C7C7C7"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toTopOf="@+id/inputEditText"
        app:layout_constraintStart_toEndOf="@+id/separatorLine"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/inputEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/poppins_medium"
        android:hint="Enter"
        android:text="9140690245"
        android:textColor="#2B2B2B"
        android:textColorHint="#C7C7C7"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/titleTextView"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
