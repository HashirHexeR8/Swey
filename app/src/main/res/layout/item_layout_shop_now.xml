<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="shopItem"
            type="com.business.swey.core.models.ShopItemDto" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_2sdp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardParent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_350sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    imageUrl="@{shopItem.imageUrl}"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/s2p2" />

                <TextView
                    android:layout_width="@dimen/_280sdp"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:fontFamily="@font/poppins_max_bold"
                    android:includeFontPadding="false"
                    android:text="@{shopItem.name}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_28ssp"
                    app:layout_constraintBottom_toTopOf="@id/tvDescription"
                    app:layout_constraintStart_toStartOf="@id/tvDescription"
                    tools:text="Winter is here" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:alpha="0.8"
                    android:fontFamily="@font/dm_sans_bold"
                    android:lineSpacingExtra="@dimen/_2sdp"
                    android:text="@{shopItem.description}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintBottom_toTopOf="@id/btShopNow"
                    app:layout_constraintStart_toStartOf="@id/btShopNow"
                    tools:text="Discover the finest selection of jackets, hoodies, coats, and all your essential winter wear." />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btShopNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginBottom="@dimen/_13sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_6sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_36sdp"
                        android:background="@drawable/gradient_shop_now"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_6sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_24sdp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Shop Now"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11ssp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:src="@drawable/ic_arrow_forward_long_white" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</layout>